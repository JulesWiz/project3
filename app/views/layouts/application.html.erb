<!DOCTYPE html>
<html>
<head>
  <title>Project3</title>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href="//cdnjs.cloudflare.com/ajax/libs/foundation/5.2.1/css/foundation.min.css" media="all" rel="stylesheet">

    <%= stylesheet_link_tag    "application", media: "all" %>
</head>
  <body>
    <header role="banner">
      <nav class="top-bar">
        <div class="right">
          <%= link_to("Login", login_url, class: 'button [radius round]' ) unless current_user %>
          <%= link_to("Sign Up", register_url, class: 'button [radius round]' ) unless current_user  %>
          <%= link_to("Logout", logout_url, class: 'button [radius round]' ) if current_user  %>
        </div>
      </nav>
    </header>
    <main role="main">
      <div class="row">
        <div class="small-6 large-2 columns"></div>
        <div class="small-6 large-8 columns"></div>
       <div class="small-12 large-2 columns"></div>
      </div>
      <%= yield %>
    </main>
      <script src="//cdnjs.cloudflare.com/ajax/libs/foundation/5.2.1/js/foundation.min.js"></script>
</body>
<footer>
</footer>
<%= flash_noty_script_tag %>
</html>