<div class="row">
  <%= form_for :tool, url: tool_url, method: :patch, html: { id: "edittool-form" } do |f| %>
    <fieldset>
      <div class="large-12 columns">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name of tool" %>
      </div>
      <div class="large-12 columns">
        <%= f.label :description, class: "sr-only" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Description of tool" %>
      </div>
      <div class="large-4 columns">
        <%= f.label :category, class: "sr-only" %>
        <%= f.text_field :category, class: "form-control", placeholder: "Category" %>
      </div>
      <div class="large-4 columns">
        <%= f.label :avatar, class: "sr-only" %>
        <%= image_tag(@tool.avatar_url) if @tool.avatar? %>
        <%= f.file_field :avatar, class: "sr-only" %>
        <%= f.hidden_field :avatar_cache %>
        <%= f.label :remove_avatar %>
        <%= f.check_box :remove_avatar %>
      </div>
<!--       <div class="large-4 columns">
        <%= f.label :availability, class: "sr-only" %>
        <%= f.check_box :availability, placeholder: "Yes", value: "Yes" %><%= f.label :yes %>
      </div> -->
      <div class="large-12 columns">
        <%= f.submit "Edit", class: "btn" %>
      </div>

    </fieldset>
  <% end %>

</div>

<%= link_to 'Back', root_url %>