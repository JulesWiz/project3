<div>

  <%= form_for :tool, url: tools_url, method: :post, html: { id: "tool-form" } do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name of tool" %>
      </div>
      <div class="form-group">
        <%= f.label :category, class: "sr-only" %>
        <%= f.text_field :category, class: "form-control", placeholder: "Category" %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "sr-only" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Name of tool" %>
      </div>
      <div class="form-group">
        <%= f.label :photos, class: "sr-only" %>
        <p>Upload photos here</p>
      </div>
      <div class="form-group">
        <%= f.label :price, class: "sr-only" %>
        <%= f.text_field :price, class: "form-control", placeholder: "Price" %>
      </div>
      <div class="form-group">
        <%= f.label :tag, class: "sr-only" %>
        <%= f.text_field :tag, class: "form-control", placeholder: "Tag" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create", class: "btn" %>
      </div>

    </fieldset>
  <% end %>

</div>