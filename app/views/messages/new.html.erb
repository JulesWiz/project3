<%= form_for :message, url: messages_url, method: :post, html: { id: "messageform" } do |f| %>
  <fieldset>
    <legend>Send a message</legend>
    <%=hidden_field_tag :message_list_token, params[:message_list_token] %>
    <div class="form-group">
      <%= f.label :subject, class: "sr-only" %>
      <%= f.text_field :subject, placeholder: "Subject" %>
    </div>
    <div class="form-group">
      <%= f.label :body, class: "sr-only" %>
      <%= f.text_field :body, placeholder: "Your Message" %>
    </div>
    <div class="form-group">
      <%= f.label :recipient_id, class: "sr-only" %>
      <%= f.text_field :recipient_id, placeholder: "Send to" %>
    </div>
    <div class="form-group">
      <%= f.submit "Send" %>
    </div>
  </fieldset>
<% end %>