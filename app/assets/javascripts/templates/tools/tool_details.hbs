{{#each tools}}
  <div class="row">
    <div class="small-4 large-4 columns">
      <div style="width:200px;height:200px;border:2px dotted blue;">
        <img src="{{avatar/avatar/url}}">
      </div>
    </div>
    <div class="small-8 large-8 columns">
      <p>{{name}}</p>
      <p>{{category}}</p>
      <p>{{description}}</p>
      <p>{{user_id}}</p>
      {{#if availability}}
        <p class="available">Available!</p>
      {{else}}
        <p class="unavailable">Not Available.</p>
      {{/if}}
    </div>
  </div>
{{/each}}
